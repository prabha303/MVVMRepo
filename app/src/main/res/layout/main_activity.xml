<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/f9"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?colorPrimary"
            app:expandedTitleMarginStart="@dimen/_18sdp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <ImageView
                android:id="@+id/header"
                android:contentDescription="@string/desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_136sdp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/landscape"
                app:layout_collapseMode="parallax" />

            <!-- android:background="@drawable/scrim_topdown"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:baselineAligned="false"
                android:fitsSystemWindows="true" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:fitsSystemWindows="true" >

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/desc"
                        android:gravity="center"
                        android:src="@drawable/ic_back"
                        android:tint="@color/white"
                        app:layout_collapseMode="parallax" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:fitsSystemWindows="true" >
                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_share"
                        android:tint="@color/white"
                        app:layout_collapseMode="parallax" />

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/ic_like"
                        android:contentDescription="@string/desc"
                        android:tint="@color/white"
                        app:layout_collapseMode="parallax" />

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/ic_search"
                        android:tint="@color/white"
                        app:layout_collapseMode="parallax" />


                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="bottom"
                android:background="@drawable/scrim" />





            <androidx.appcompat.widget.Toolbar
                android:id="@+id/anim_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                android:visibility="gone"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>




        <LinearLayout
            android:id="@+id/otal"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_height="wrap_content" >
            <com.prabha.application.CustomTextView
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:textColor="@color/color_3333"
                android:text=""
                android:textSize="@dimen/_14sdp"
                app:layout_anchorGravity="top|center" />
            <com.prabha.application.CustomTextViewLight
                android:id="@+id/cuisine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:textColor="@color/light_gray_89"
                android:text=""
                android:textSize="@dimen/_10sdp"
                app:layout_anchorGravity="top|center" />

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/view_color"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:baselineAligned="false"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_height="wrap_content" >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_star"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:contentDescription="@string/desc"
                            android:layout_marginStart="@dimen/_8sdp"
                            app:layout_anchorGravity="top|center" />

                        <com.prabha.application.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:textColor="@color/color_3333"
                            android:text="4.3"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:textSize="@dimen/_12sdp"
                            app:layout_anchorGravity="top|center" />
                    </LinearLayout>
                    <com.prabha.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:textColor="@color/light_gray_89"
                        android:text="1000+ ratings"
                        android:textSize="@dimen/_10sdp"
                        app:layout_anchorGravity="top|center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_height="match_parent" >

                    <com.prabha.application.CustomTextView
                        android:id="@+id/delivery_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/color_3333"
                        android:text=" 30 - 40 mins "
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textSize="@dimen/_12sdp"
                        app:layout_anchorGravity="top|center" />
                    <com.prabha.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:textColor="@color/light_gray_89"
                        android:text="Delivery time"
                        android:layout_gravity="center"
                        android:gravity="right"
                        android:textSize="@dimen/_10sdp"
                        app:layout_anchorGravity="top|center" />
                </LinearLayout>
            </LinearLayout>
            <com.prabha.application.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_circle"
                android:drawablePadding="@dimen/_4sdp"
                android:background="@drawable/roundrect_btn_bg"
                android:paddingTop="@dimen/_4sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_12sdp"
                android:textColor="@color/finished_color"
                android:gravity="left|center"
                android:textSize="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:paddingLeft="@dimen/_4sdp"
                android:text="15 % off on all orders" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_8sdp"
                android:padding="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_height="wrap_content" >
                <com.prabha.application.CustomTextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:textColor="@color/color_3333"
                    android:text="VEG ONLY"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:textSize="@dimen/_10sdp"
                    app:layout_anchorGravity="top|center" />

                <Switch
                    android:id="@+id/togglebutton"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:background="@color/product_list_bg"
                android:layout_height="@dimen/_16sdp" />
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>





    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/recyclerView"
        android:layout_marginBottom="@dimen/_30sdp"
        android:background="@color/white"
        android:transitionName="bottom">
    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/my_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/f9"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal|bottom"
        app:layout_anchorGravity="top">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="match_parent" >

        <com.prabha.application.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="@string/rs"/>

        <com.prabha.application.CustomTextView
            android:id="@+id/totalPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:text="0.0"/>

    </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/green_text"
            android:layout_height="match_parent" >
            <com.prabha.application.CustomTextView
                android:id="@+id/proceed_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="PROCEED TO PAY"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>