<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/social_network_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.match.matchmakers.application.CustomTextView
            android:id="@+id/loginntext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="Hi there!"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <com.match.matchmakers.application.CustomTextViewLight
            android:id="@+id/loginsubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginntext"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="Sign up to enjoy the best trucking experience."
            android:textColor="@color/light_gray_89"
            android:textSize="@dimen/_12sdp"  />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/customer_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/signuplogo"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:contentDescription="desc"
            android:src="@mipmap/ic_icon_round" />
        <com.match.matchmakers.application.CustomTextViewLight
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="I will be using for..."
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/signuplogo"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp" />
        <LinearLayout
            android:id="@+id/cardholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/heading"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp" >

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/_6sdp"
                card_view:cardElevation="@dimen/_4sdp"
                card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:id="@+id/loginCard"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/imageView2business"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:contentDescription="desc"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:src="@mipmap/ic_proker" />
                    <com.match.matchmakers.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textColor="@color/commontxtcolor"
                        android:text="Login "
                        android:textSize="@dimen/_12sdp" />
                    <com.match.matchmakers.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/light_gray_89"
                        android:singleLine="true"
                        android:text="Login as broker"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_6sdp"
                card_view:cardElevation="@dimen/_4sdp"
                card_view:cardUseCompatPadding="true"
                android:clickable="true"
                android:id="@+id/searchBrokerCard"
                android:foreground="?android:attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/imageViewindividual"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:contentDescription="desc"
                        android:src="@mipmap/ic_search" />
                    <com.match.matchmakers.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:textColor="@color/commontxtcolor"
                        android:text="Search "
                        android:textSize="@dimen/_12sdp" />
                    <com.match.matchmakers.application.CustomTextViewLight
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/light_gray_89"
                        android:singleLine="true"
                        android:text="Eg: search your match"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/cardholder"
            android:layout_margin="@dimen/_3sdp" >
            <com.match.matchmakers.application.CustomTextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:id="@+id/businesstxt"
                android:text="Login As Broker"
                android:textSize="@dimen/_14sdp" />
            <com.match.matchmakers.application.CustomTextViewRegular
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAllCaps="true"
                android:id="@+id/individualtxt"
                android:textColor="@color/colorPrimary"
                android:text="View All Brokers"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

       <!-- <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true">
            <com.match.matchmakers.application.CustomTextViewLight
                android:id="@+id/moveto_type_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingBottom="@dimen/_20sdp"
                android:text="Already have an account? Login"
                android:textColor="@color/fieldtxtcolor"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>-->

    </RelativeLayout>

</LinearLayout>
